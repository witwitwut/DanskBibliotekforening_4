<Window x:Class="DanskBibliotekForening_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DanskBibliotekForening_4"
        mc:Ignorable="d"
        Title="Dansk Biblioteks Forening" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="groupBoxBooks"
                  Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0"
                       Grid.Row="0"
                       Content="Søg efter titel:"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Right"
                       Margin="5"/>
                <TextBox x:Name="textBoxSearch"
                         Text="{Binding search, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Grid.Row="0"
                         Margin="5"
                         VerticalContentAlignment="Center"/>
                <ListView x:Name="listViewBooks"
                          ItemsSource="{Binding boeger}"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          Grid.RowSpan="9"
                          Grid.Row="1"
                          Margin="5" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Titel"
                                            Width="200"
                                            DisplayMemberBinding="{Binding titel}" />
                            <GridViewColumn Header="Forfatter"
                                            Width="150"
                                            DisplayMemberBinding="{Binding forfatter}" />
                            <GridViewColumn Header="Genre"
                                            Width="100"
                                            DisplayMemberBinding="{Binding genre}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button x:Name="buttonLoan"
                        Grid.Column="2"
                        Grid.Row="10"
                        Margin="5, 5, 5, 5"
                        Content="Lån bog"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBoxUser"
                  Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.7*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0"
                       Grid.Row="0"
                       Margin="5"
                       Content="{Binding person.id}"/>
                <Button x:Name="buttonLogOut"
                        Grid.Column="2"
                        Margin="5"
                        Content="Log Ud"/>
                <Label Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="1"
                       Margin="5"
                       Content="Lånte bøger:"/>
                <ComboBox x:Name="comboBoxLendBooks"
                          ItemsSource="{Binding laanteboeger}"
                          DisplayMemberPath="titel"
                          SelectedValue="{Binding bog.titel}"
                          SelectedValuePath="titel"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          Grid.Row="2"
                          Margin="5" SelectionChanged="comboBoxLendBooks_SelectionChanged">
                </ComboBox>
                <Label Grid.Column="0"
                       Grid.Row="4"
                       Content="Bog:"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Right"
                       Margin="5"/>
                <TextBox x:Name="textBoxLendBook"
                         Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Grid.Row="4"
                         Margin="5"
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"/>
                <Label Grid.Column="0"
                       Grid.Row="5"
                       Content="Udlånt:"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Right"
                       Margin="5"/>
                <DatePicker x:Name="datePickerLoan"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="5"
                            IsEnabled="False"
                            Margin="5"/>
                <Label Grid.Column="0"
                       Grid.Row="6"
                       Content="Afleverings Dato:"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Right"
                       Margin="5"/>
                <DatePicker x:Name="datePickerTurnIn"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="6"
                            IsEnabled="False"
                            Margin="5"/>
                <Button x:Name="buttonTurnIn"
                        Grid.Column="1"
                        Grid.Row="10"
                        Margin="5"
                        Content="Aflever"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
